# Atmosbyte Configuration
# Copy this file to .env and set your actual values

# OpenWeather API Configuration
OPENWEATHER_API_KEY=your_openweather_api_key_here
STATION_ID=your_weather_station_id_here

# Sensor Configuration
# Set to "true" to use simulated sensor data instead of BME280 hardware
USE_SIMULATED_SENSOR=true

# Optional: Queue Configuration (these are defaults)
# QUEUE_WORKERS=2
# QUEUE_BUFFER_SIZE=50
# QUEUE_MAX_RETRIES=3
# QUEUE_BASE_DELAY=5s

# Optional: Sensor Reading Interval
# SENSOR_INTERVAL=10s

# Optional: Log Level
# LOG_LEVEL=info
